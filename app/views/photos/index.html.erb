<div class="page-header">
  <% if current_user %>
    <div class="pull-right">
      <%= link_to 'Add Photo', new_photo_path, class: 'btn btn-info' %>
    </div>
  <% end %>
  <h1>Photos</h1>
</div>

<div class="row">
  <% @photos.each_with_index do |photo, index| %>
    <div class="col-md-4">
      <%= link_to photo_path(photo), class: 'thumbnail' do %>
        <%= image_tag photo.img_url %>
        <div class="caption">
          <h3><%= photo.date.strftime("%B %Y") %></h3>
          <p>
            <%= photo.caption %>
          </p>
        </div>
      <% end %>
      <% if current_user %>
        <%= link_to 'Edit', edit_photo_path(photo), class: 'btn btn-info' %>
        <%= link_to 'Delete', photo_path(photo), method: :delete, class: 'btn btn-danger' %>
      <% end %>
    </div>
    <% if (index + 1) % 4 == 0 %>
</div>
<div class='row'>
    <% end %>
  <% end %>
</div>
