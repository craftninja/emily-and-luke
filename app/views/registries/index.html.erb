<div class="page-header">
  <% if current_user %>
    <div class="pull-right">
      <%= link_to 'Add Registry', new_registry_path, class: 'btn btn-info' %>
    </div>
  <% end %>
  <h1>Registries</h1>
</div>
<div class="row">
  <% @registries.each_with_index do |registry, index| %>
    <div class="col-md-4">
      <div class="thumbnail">
        <%= image_tag registry.img_url %>
        <div class="caption">
          <h3><%= link_to registry.title, registry.url, :target => "_blank" %></h3>
          <p><%= registry.description %></p>
        </div>
      </div>
      <% if current_user %>
        <%= link_to 'Edit', edit_registry_path(registry), class: 'btn btn-info' %>
        <%= link_to 'Delete', registry_path(registry), method: :delete, class: 'btn btn-warning' %>
      <% end %>
    </div>
    <% if (index + 1) % 4 == 0 %>
</div>
<div class='row'>
    <% end %>
  <% end %>
</div>
