<div class='well'>
  <%= form_for @family, html: {class: 'form-horizontal'} do |f| %>
    <div class='form-group'>
      <%= f.label :secret_code, 'Secret Code', class: 'control-label col-md-2' %>
      <div class='col-md-4'>
        <%= f.text_field :secret_code, class: 'form-control' %>
      </div>
    </div>
    <div class='form-group'>
      <%= f.label :address, class: 'control-label col-md-2' %>
      <div class='col-md-4'>
        <%= f.text_field :address, class: 'form-control' %>
      </div>
    </div>
    <div class='form-group'>
      <%= f.label :city, class: 'control-label col-md-2' %>
      <div class='col-md-4'>
        <%= f.text_field :city, class: 'form-control' %>
      </div>
    </div>
    <div class='form-group'>
      <%= f.label :state, class: 'control-label col-md-2' %>
      <div class='col-md-4'>
        <%= f.text_field :state, class: 'form-control' %>
      </div>
    </div>
    <div class='form-group'>
      <%= f.label :zip, class: 'control-label col-md-2' %>
      <div class='col-md-4'>
        <%= f.text_field :zip, class: 'form-control' %>
      </div>
    </div>
    <div class='form-group'>
      <div class='col-md-offset-2 col-md-10'>
        <%= f.submit button, class: 'btn btn-success' %>
      </div>
    </div>
  <% end %>
</div>
