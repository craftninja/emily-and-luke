<h1 class='page-header'><%= @user.full_name %>'s Dietary Restrictions</h1>
<div class='well'>
  <%= form_tag(rsvp_dietary_restrictions_path(@user.id), method: :patch, class: 'form-horizontal') do %>
    <div class='form-group'>
      <%= label_tag :dietary_restrictions, 'Dietary Restrictions', class: 'control-label col-md-2' %>
      <div class='col-md-4'>
        <%= text_area_tag :dietary_restrictions, @user.dietary_restrictions, class: 'form-control' %>
      </div>
    </div>
    <div class='form-group'>
      <div class='col-md-offset-2 col-md-10'>
        <%= submit_tag "That's what I'm eating these days", class: 'btn btn-info' %>
      </div>
    </div>
  <% end %>
</div>
